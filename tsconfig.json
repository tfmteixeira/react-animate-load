{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "hooks": [
    "copy-files" 
  ],
  "include": [
    "src/",
    "src/**/*.module.css"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/main.tsx",
    "assets",
  ]
}
